{
    "manifest_version": 2,
    "name": "GitHub Notification Extension",
    "version": "1.0",
    "description": "Displays a desktop notification when you receive a GitHub notification.",
    "permissions": [
      "notifications",
      "https://github.com/*/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://github.com/*/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ]
  }
  